@model IEnumerable<ShoppingOnline.Models.CatalogoScarpe>

@{
    ViewData["Title"] = "Risultati della ricerca";
}

<h2>Risultati della ricerca</h2>

@if (!Model.Any())
{
    <p>Nessun risultato trovato.</p>

}
else
{
    <div class="container">
        <div class="row">
            @foreach (var scarpa in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="@scarpa.ImmagineUrl" class="card-img-top" alt="@scarpa.Nome" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@scarpa.Nome</h5>
                            <p class="card-text">@scarpa.Marca</p>
                           <p class="card-text">@scarpa.Descrizione</p>
                            <p class="fw-bold">@scarpa.Price.ToString("C")</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
